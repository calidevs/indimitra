# Database Configuration
# For Docker Compose: use host=db
# For local Python without Docker: use host=localhost
POSTGRES_USER=indimitrauser
POSTGRES_PASSWORD=indimitrapass
POSTGRES_DB=indimitra
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# For production/AWS RDS (comment out above and uncomment below)
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_password
# POSTGRES_HOST=your-rds-endpoint.amazonaws.com
# POSTGRES_PORT=5432
# POSTGRES_DB=IndiMart

# ============================================================
# AWS Cognito Configuration (REQUIRED for production)
# ============================================================
# Get these values from your AWS Cognito User Pool
AWS_REGION=us-east-1
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_USER_POOL_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX

# Skip Cognito validation for local development (DEVELOPMENT ONLY!)
# Set to 'true' to run without Cognito credentials
# WARNING: This disables authentication! Only use for local testing.
SKIP_COGNITO_VALIDATION=false

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_NAME=your_bucket_name

# ============================================================
# Security Configuration
# ============================================================
# CORS: Comma-separated list of allowed origins
# Production: Use your actual frontend domain(s)
# Development: http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# GraphiQL Playground
# IMPORTANT: Set to false in production for security
# Only enable for local development or staging
ENABLE_GRAPHIQL=false

# Encryption Key (32 bytes)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your-32-byte-encryption-key

# ============================================================
# Square Payment Configuration
# ============================================================
# Get these from your Square Developer Dashboard
# https://developer.squareup.com/apps
SQUARE_APPLICATION_ID=sandbox-sq0idb-XXXXXXXXXXXXXXXXXXXXXX
SQUARE_APPLICATION_SECRET=sandbox-sq0csb-XXXXXXXXXXXXXXXXXXXXXX
SQUARE_ENVIRONMENT=sandbox

# OAuth Configuration
# Set this to your backend URL + /oauth/callback
OAUTH_REDIRECT_URI=http://localhost:8000/oauth/callback
FRONTEND_URL=http://localhost:3000

# Payment Encryption Secret (AWS Secrets Manager)
PAYMENT_ENCRYPTION_SECRET_NAME=indimitra/payment-encryption-key

# ============================================================
# Email Configuration (SendGrid)
# ============================================================
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com
